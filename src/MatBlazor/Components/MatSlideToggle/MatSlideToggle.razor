@namespace MatBlazor
@typeparam TValue
@inherits BaseMatSlideToggle<TValue>

<div class="@ClassMapper.AsString() @(FieldClass?.Contains("invalid") == true ? "mdc-text-field--invalid" : string.Empty)" style="@StyleMapper.AsString()" @ref="Ref" @attributes="Attributes">
    <div class="mdc-switch__track"></div>
    <div class="mdc-switch__thumb-underlay">
        <div class="mdc-switch__thumb">
            <input type="checkbox" id="@Id" class="mdc-switch__native-control" role="switch" checked="@Checked" @onchange="OnChangedHandler" disabled="@Disabled" @ref="@InputRef" />
        </div>
    </div>
</div>
@if (Label != null)
{
    <label for="@Id">@Label</label>
}
@if (For != null)
{
    <div class="mdc-text-field-helper-line">
        <MatValidationMessage Id="@ValidationMessageId" For="@For" ForId="@Id" />
    </div>
}